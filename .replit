run = "npm run dev"
entrypoint = "server/index-minimal.ts"
modules = ["nodejs-20", "web"]

hidden = [".config", ".git", "node_modules", "dist", "package-lock.json"]

[nix]
channel = "stable-23_11"

[unitTest]
language = "nodejs"

[deployment]
build = ["sh", "-c", "npm run build:production"]
run = ["sh", "-c", "npm run start:production"]
deploymentTarget = "cloudrun"
ignorePorts = false
name = "DHA Digital Services"
mode = "parallel"

[languages]
[languages.typescript]
pattern = "**/{*.ts,*.js,*.tsx,*.jsx}"
syntax = "typescript"

[languages.typescript.languageServer]
start = "typescript-language-server --stdio"

[env]
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_global/bin:/home/runner/$REPL_SLUG/node_modules/.bin"
npm_config_prefix = "/home/runner/$REPL_SLUG/.config/npm/node_global"
NODE_ENV = "development"
PORT = "3000"
DATABASE_URL = "file:./data/development.sqlite"
SESSION_SECRET = "development-secret-change-in-production"
REPLIT = "true"
NODE_OPTIONS = "--max-old-space-size=4096 --experimental-modules --es-module-specifier-resolution=node"
SKIP_PREFLIGHT_CHECK = "true"
TSC_COMPILE_ON_ERROR = "false"
DISABLE_ESLINT_PLUGIN = "true"
VITE_DISABLE_OPTIMIZER = "false"
VITE_MINIFY = "true"
VITE_SOURCE_MAP = "false"

[packager]
language = "nodejs"

[packager.features]
enabledForHosting = true
packageSearch = true
guessImports = true

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".config"]

[auth]
pageEnabled = false
buttonEnabled = false

[debugger]
support = true

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

