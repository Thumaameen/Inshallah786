{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "noEmit": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": false,
    "declaration": false,
    "incremental": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "client/**/*",
    "**/*.test.ts",
    "**/*test*.ts",
    "**/test-*.ts",
    "**/__tests__/**"
  ]
}