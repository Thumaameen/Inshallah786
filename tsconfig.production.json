{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node", "express", "cors", "compression", "helmet"],
    "paths": {
      "*": ["./node_modules/*", "./src/types/external/*"],
      "@shared/*": ["./shared/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmitOnError": false,
    "declaration": false,
    "sourceMap": false,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server/**/*", "shared/**/*", "src/**/*"],
  "exclude": [
    "node_modules",
    "client",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.js",
    "**/*.spec.js",
    "server/workers",
    "dist"
  ]
}