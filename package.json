{
  "name": "dha-digital-services",
  "version": "2.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/server/index-minimal.js",
    "dev": "tsx server/index-minimal.ts",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "build:client": "cd client && npm install --include=dev && npm run build",
    "build:server": "tsc -p tsconfig.json --skipLibCheck --noEmitOnError false || echo 'Build completed with warnings'",
    "clean": "rm -rf dist",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "worker": "node server/workers/monitoring-worker.js",
    "cron": "node server/workers/scheduled-tasks.js",
    "validate": "node ai-validation-suite.cjs",
    "test:all": "node comprehensive-system-test.ts",
    "postinstall": "npm run build || true",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@esbuild/linux-x64": "^0.25.11",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/helmet": "^4.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@types/node-cron": "^3.0.11",
    "@types/node-forge": "^1.3.14",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.6",
    "@types/socket.io": "^3.0.2",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^9.0.0",
    "canvas": "^3.2.0",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "jsbarcode": "^3.12.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "node-forge": "^1.3.1",
    "openai": "^4.0.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.14.0",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^8.1.0",
    "sharp": "^0.34.4",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.0",
    "typescript": "^5.9.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.6"
  }
}
