{
  "name": "dha-digital-services",
  "version": "2.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.19.1",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node dist/server/index-minimal.js",
    "dev": "npx tsx server/index-minimal.ts",
    "replit:dev": "NODE_ENV=development npx tsx --enable-source-maps server/index-minimal.ts",
    "render-start": "bash render-start.sh",
    "build:production": "bash render-build-production.sh",
    "validate:services": "NODE_ENV=production npx tsx src/services/service-validator.ts",
    "verify:production": "NODE_ENV=production npm run build:production",
    "build": "npm run clean && npm run setup:deps && npm run build:all",
    "setup:deps": "npm install && cd client && npm install --legacy-peer-deps && npm install --save-dev vite@latest @vitejs/plugin-react typescript @types/react @types/react-dom @types/node",
    "build:all": "npm run build:server && npm run build:client && npm run copy:client",
    "build:client": "cd client && npm run build",
    "build:server": "tsc -p tsconfig.production.json",
    "copy:client": "mkdir -p dist/public && cp -r client/dist/* dist/public/ || echo \"No client files to copy\"",
    "clean": "rm -rf dist client/dist node_modules/.cache",
    "setup:types": "npm install --save-dev @types/node @types/express",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "worker": "node server/workers/monitoring-worker.cjs",
    "cron": "node server/workers/scheduled-tasks.cjs",
    "validate": "node ai-validation-suite.cjs",
    "test:all": "npx tsx comprehensive-system-test.ts",
    "test:render": "npx tsx test-render-deployment.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@google/generative-ai": "^0.21.0",
    "@octokit/rest": "^21.0.2",
    "@peculiar/x509": "^1.12.3",
    "asn1js": "^3.0.5",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "ethers": "^6.13.2",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsbarcode": "^3.11.6",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.0.1",
    "multer": "^1.4.5-lts.1",
    "node-forge": "^1.3.1",
    "openai": "^4.63.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.15.0",
    "pg": "^8.13.0",
    "postgres": "^3.4.4",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.11",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.5.5",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.5.12",
    "drizzle-kit": "^0.28.1",
    "typescript": "^5.6.2"
  }
}
